head
  link(href='https://fonts.googleapis.com/css?family=Princess+Sofia' rel='stylesheet' type='text/css')
  title Flute & Violin
  
body
  +header
  
  +booking
  
  div.ui.vertical.stripe.segment.listen
    div.ui.container
      h3.ui.horizontal.divider.header
        i.music.icon
        | Listen
      
    div.ui.container
      div.ui.equal.width.stackable.grid
        div.column
          a.ui.massive.fluid.animated.fade.gray.music.button
            audio
              source(src='autumn.mp3')
            div.hidden.content
              i.play.icon
            div.visible.content
              i.play.icon
              | Autumn
        div.column
          a.ui.massive.fluid.animated.fade.gray.music.button
            audio
              source(src='/bouree.mp3')
            div.hidden.content
              i.play.icon
            div.visible.content
              i.play.icon
              | Bouree
        div.column
          a.ui.massive.fluid.animated.fade.gray.music.button
            audio
              source(src='canon.mp3')
            div.hidden.content
              i.play.icon
            div.visible.content
              i.play.icon
              | Canon
        div.column
          a.ui.massive.fluid.animated.fade.gray.music.button
            audio
              source(src='frivolity.mp3')
            div.hidden.content
              i.play.icon
            div.visible.content
              i.play.icon
              | Frivolity
            
  div.ui.vertical.stripe.segement#prices
    div.ui.container
      h3.ui.horizontal.divider.header
        i.dollar.icon
        | Prices
        
    div.ui.container
      div.ui.equal.width.stackable.grid
        div.column
          table.ui.brown.selectable.table
            thead
              tr.center.aligned
                th(colspan='2')
                  h3 Wedding
            tbody
              tr
                td.center.aligned
                  h4 Prelude
                    small 30 minutes of pre-wedding music
                td.center.aligned
                  div.ui.tiny.brown.statistic
                    div.value 250
              tr
                td.center.aligned
                  h4 Marches
                    small processional and/or recessional
                td.center.aligned
                  div.ui.tiny.brown.statistic
                    div.value 250
              tr
                td.center.aligned
                  h4 Ceremony
                    small up to three pieces
                td.center.aligned
                  div.ui.tiny.brown.statistic
                    div.value 250
              tr
                td.center.aligned
                  h4 Prelude & Marches
                td.center.aligned
                  div.ui.tiny.brown.statistic
                    div.value 350
              tr
                td.center.aligned
                  h4 Prelude & Ceremony
                td.center.aligned
                  div.ui.tiny.brown.statistic
                    div.value 350
              tr
                td.center.aligned
                  h4 Marches & Ceremony
                td.center.aligned
                  div.ui.tiny.brown.statistic
                    div.value 350
              tr
                td.center.aligned
                  h4 Prelude, Marches & Ceremony
                td.center.aligned
                  div.ui.tiny.brown.statistic
                    div.value 400
                    
        div.column          
          table.ui.brown.selectable.table
            thead
              tr.center.aligned
                th(colspan='2')
                  h3 Reception
            tbody
              tr
                td.center.aligned
                  h4 One hour
                td.center.aligned
                  div.ui.tiny.brown.statistic
                    div.value 250
              tr
                td.center.aligned
                  h4 Two hours
                td.center.aligned
                  div.ui.tiny.brown.statistic
                    div.value 450
              tr
                td.center.aligned
                  h4 Three hours
                td.center.aligned
                  div.ui.tiny.brown.statistic
                    div.value 575
              tr
                td.center.aligned
                  h4 Each additional hour
                td.center.aligned
                  div.ui.tiny.brown.statistic
                    div.value 125
                    
        div.column
          table.ui.brown.selectable.table
            thead
              tr.center.aligned
                th(colspan='2')
                  h3 Wedding & Reception
            tbody
              tr
                td.center.aligned
                  h4 Wedding service and one hour
                td.center.aligned
                  div.ui.tiny.brown.statistic
                    div.value 550
              tr
                td.center.aligned
                  h4 Wedding service and two hours
                td.center.aligned
                  div.ui.tiny.brown.statistic
                    div.value 700
              tr
                td.center.aligned
                  h4 Wedding service and three hours
                td.center.aligned
                  div.ui.tiny.brown.statistic
                    div.value 800

  +footer

  
