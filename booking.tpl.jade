div.ui.vertical.stripe.segment#booking
  div.ui.container
    h3.ui.horizontal.divider.header
      i.calendar.icon
      | Book Now
      
    div.ui.large.form
      div.three.fields
        div.required.field
          label Your Full Name
          input(type='text' placeholder='First Last')
        div.required.field
          label Mobile phone
          input(type='tel' placeholder='123-456-7890')
        div.required.field
          label Date of Event
          input.ui.dropdown.datetimepicker(type='text' placeholder='mm/dd/yyyy')
      div.two.fields
        div.required.field
          label Event Location
          input(type='text' placeholder='300 Alamo Plaza, San Antonio, TX 78205')
        div.required.field
          label Services
          select.ui.dropdown(multiple='')
            option(value='') Select...
            option(value='1') Prelude
            option(value='2') Marches
            option(value='3') Ceremony
      div.ui.segment
        div.required.inline.field
          div.ui.toggle.checkbox
            input.hidden(type='checkbox')
            label
              | I have read and understood the
              a(href='/fluteviolin_contract.pdf' target='_blank') contract
      
      .ui.three.column.centered.grid
        .column
          button.massive.fluid.ui.primary.button(type='submit') Book Now
